<%= stylesheet_link_tag "operation" %>
<%= javascript_include_tag "jquery-1.4.2.min.js" %>
<%= javascript_include_tag "jquery.jcarousel.min.js" %>

<script type="text/javascript">

jQuery(document).ready(function() {
    jQuery('#mycarousel').jcarousel();
});

</script>
<%-	operationlast = @operations.find(:last) %>
<%-	operationfirst = @operations.find(:first) %>
<%-	operationcurent = @operation %>
<div class="feeds_box">
	<div id="wrap">
	  <ul id="mycarousel" class="jcarousel-skin-tango">
		  <% @operations.each do |operation| %>   
		  <%-if operation != operationfirst %> 
		    <li>
					<div class="left news_header_block"> 
						<h2 class="newstitle">
               <%-if operation == operationcurent %>
                 <div class="left"> 
	                 <div class="pointer_arrow"> 
		                </div>
		              </div>
		           <% end %> 
               <%=raw operation.title %>
            </h2>
	        <a href= "<%= operation_path(operation)%>" class="type_text"> 
             <span> <%= raw truncate(operation.shorttext, :length => 112, :omission => '...' ) %></span>
          </a>          
	        </div>
		    </li>
	    <% end %>
	    <% end %>
	  </ul>
	</div>
</div>
<div class="right">
<div class="content">

<h1><%=raw @operation.title %></h1>
    <%=raw @operation.part %>
</div>
</div>
<div class="type_menu_container">
 <div class="type_menu">
	 <a href="/about" class= "type_about_us"><div></div></a>
   <a href="/operations" class= "type_operations"><div></div></a>
   <a href="/team" class= "type_team"><div></div></a>
   <a href="/newsfeeds" class= "type_news"><div></div></a>
   <a href="/careers" class= "type_careers"><div></div></a>

 </div>
</div>

