<%= stylesheet_link_tag "operation" %>
<%-	operationlast = @operations.find(:last) %>
<%-	operationfirst = @operations.find(:first) %>
<div class="feeds_box">
    <div id="newsfeed" > 
	    <%=link_to "", "", :class=> "arrow news_right"%>
	    <%=link_to "", "", :class=> "news_left"%>     
      <% @operations.each do |operation| %>  
         <%-if operation != operationfirst %>
          <div class="left"> 
	          <h2 class="newstitle">
               <%-if operation == operationlast %>
                 <div class="left"> 
	                 <div class="pointer_arrow"> 
		                </div>
		              </div>
		           <% end %> 
               <%=raw operation.title %>
            </h2>
	        <a href= "<%= operation_path(operation)%>" class="news_header_block"> 

             <span><%=raw operation.shorttext %></span>
          </a>          
          </div>
        <% end %>
      <% end %>
    </div>
</div>
<div class="right">
<div class="content">

<h1><%=raw @operation.title %></h1>
    <%=raw @operation.part %>
</div>
</div>
