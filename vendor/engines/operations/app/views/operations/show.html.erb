<% content_for :body_content_title do %>
  <%= @operation.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @operation.title %>
    </p>
  </section>
  <section>
    <h1>Part</h1>
    <p>
      <%=raw @operation.part %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="operations">
      <% @operations.each do |operation| %>
        <li>
          <%= link_to operation.title, operation_path(operation) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
