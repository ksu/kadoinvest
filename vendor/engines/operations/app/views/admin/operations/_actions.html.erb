<ul>
  <% if Admin::OperationsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_operations_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_operation_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::OperationsController.sortable? and Operation.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Operations"),
                 admin_operations_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Operations"),
                 admin_operations_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>