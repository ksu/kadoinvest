<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(operation) -%>">
  <span class='title'>
    <%= operation.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), operation_path(operation),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_operation_path(operation),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_operation_path(operation),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => operation.title),
        :method => :delete %>
  </span>
</li>
