<% content_for :body_content_title do %>
  <%= @new.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @new.title %>
    </p>
  </section>
  <section>
    <h1>Text1</h1>
    <p>
      <%=raw @new.text1 %>
    </p>
  </section>
  <section>
    <h1>Text2</h1>
    <p>
      <%=raw @new.text2 %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @new.date %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="news">
      <% @news.each do |new| %>
        <li>
          <%= link_to new.title, new_path(new) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
