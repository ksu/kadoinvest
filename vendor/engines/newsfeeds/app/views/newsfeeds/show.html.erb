
<%= stylesheet_link_tag "newsfeed" %>
<div class="feeds_box">
    <div id="newsfeed" > 
	    <%=link_to "", "", :class=> "arrow news_right"%>
	    <%=link_to "", "", :class=> "news_left"%>     
      <% @newsfeeds.each do |newsfeed| %>  
          <div class="left"> 
	        <a href= "<%= newsfeed_path(newsfeed)%>" class="news_header_block"> 
		      <h2><%= truncate(newsfeed.date.to_s, :length => 11, :omission => '' ) %></h2>  
          <h2><%=raw newsfeed.title %></h2>
          <span><%=raw newsfeed.text1 %></span>
          </a>          
          </div>
      <% end %>
    </div>
</div>
<div class="right">
<div class="content">
<h1><%=raw @newsfeed.title %></h1>
    <%=raw @newsfeed.text2 %>
</div>
</div>
