<%= stylesheet_link_tag "newsfeed" %>
<%= javascript_include_tag "jquery-1.4.2.min.js" %>
<%= javascript_include_tag "jquery.jcarousel.min.js" %>

<script type="text/javascript">

jQuery(document).ready(function() {
    jQuery('#mycarousel').jcarousel();
});

</script>
<%-	newsfeedlast = @newsfeeds.find(:last) %>
<div class="contentpage">
<div class="feeds_box">
	<div id="wrap">

	  <ul id="mycarousel" class="jcarousel-skin-tango">
		  <% @newsfeeds.each do |newsfeed| %>  
	    <li>
		    <div class="left news_header_block"> 	        
	      
	          <%-if newsfeed == newsfeedlast %>
	             <h2 class="newstitle">
	               <div class="left"> 
		                 <div class="pointer_arrow"> 
			                </div>
			            </div>
			           <%=link_to newsfeed.title, newsfeed_path(newsfeed) %>
			         </h2>
			      <% else %>
			       <h2 class="newstitle"> 
             <%=link_to newsfeed.title, newsfeed_path(newsfeed) %>
            </h2>
           <% end %>
            <a href= "<%= newsfeed_path(newsfeed)%>" class=""> 
	          <span><%=raw newsfeed.text1 %></span>
	          </a>
	      </div>
	    </li>
	
	    <li>
		    <div class="left news_header_block"> 	        
	          <%-if newsfeed == newsfeedlast %>
	             <h2 class="newstitle">
	               <div class="left"> 
		                 <div class="pointer_arrow"> 
			                </div>
			            </div>
			           <%=link_to newsfeed.title, newsfeed_path(newsfeed) %>
			         </h2>
			      <% else %>
			       <h2 class="newstitle"> 
             <%=link_to newsfeed.title, newsfeed_path(newsfeed) %>
            </h2>
           <% end %>
            <a href= "<%= newsfeed_path(newsfeed)%>" class=""> 
	          <span><%=raw newsfeed.text1 %></span>
	          </a>
	      </div>
	    </li>
	
	    <% end %>
	  </ul>

	</div>
  
</div>
<div class="right">
<div class="content">

<h1><%=raw newsfeedlast.title %><span class="newsdate"><%= truncate(newsfeedlast.date.to_s, :length => 11, :omission => '' ) %></span></h1>
    <%=raw newsfeedlast.text2 %>
</div>
</div>
<div class="type_menu_container">
 <div class="type_menu">
	 <a href="/about" class= "type_about_us"><div></div></a>
   <a href="/operations" class= "type_operations"><div></div></a>
   <a href="/team" class= "type_team"><div></div></a>
   <a href="/newsfeeds" class= "type_news"><div></div></a>
   <a href="/careers" class= "type_careers"><div></div></a>

 </div>
</div>
</div>

